<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:id="@+id/ddlnon"
    android:background="#CCF3B1"
    android:layout_height="match_parent"
    tools:context=".Breakfast">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="30sp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_home_24"
            android:layout_marginLeft="19dp"
            android:id="@+id/gohomebreakfast"/>
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="Breakfast Recipes"
            android:id="@+id/toolbarbreakfast"
            android:textAlignment="viewStart"
            android:background="#CCF3B1">
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/layoutback"
        android:elevation="15dp"
        android:weightSum="10"
        android:orientation="vertical"
        android:id="@+id/container"
        android:padding="20sp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="List of Breakgast Recipes"
            android:textSize="20sp"
            android:id="@+id/listbrak"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textColor="#275309"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            android:id="@+id/recycleOfbreakfast"/>

    </LinearLayout>


</LinearLayout>